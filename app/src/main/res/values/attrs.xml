<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlacesView">
        //screen
        <attr name="screenTextSize" format="dimension"/>
        <attr name="screenTextColor" format="color"/>
        <attr name="screenBgColor" format="color"/>
        <attr name="screenTextPadding" format="dimension"/>
        <attr name="screenTextStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        //table
        <attr name="placesTableMargin" format="dimension"/>
        //rowNumber
        <attr name="rowNumberTextSize" format="dimension"/>
        <attr name="rowNumberTextStyle"  format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="rowNumberTextColor" format="color"/>
        <attr name="rowNumberMargin" format="dimension"/>
        //place
        <attr name="placeTextSize" format="dimension"/>
        <attr name="placeTextColor" format="color"/>
        <attr name="placeTextStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="placeTextPadding" format="dimension"/>
        <attr name="placeMargin" format="dimension"/>
        <attr name="placeCornerRadius" format="dimension"/>
        <attr name="placeFreeColor" format="color"/>
        <attr name="placeReservedColor" format="color"/>
        <attr name="placePickedColor" format="color"/>
        <attr name="placeShowNumbersAlways" format="boolean"/>
    </declare-styleable>
</resources>